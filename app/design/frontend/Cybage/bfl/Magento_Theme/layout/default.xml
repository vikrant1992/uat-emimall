<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <css src="css/bootstrap.min.css" />
        <script src="js/header.js" />
        <script src="js/homepage.js" />
        <script src="js/login-popup.js" />
        <script src="js/common_functionality.js" />
    </head>
    <body>
        <referenceBlock name="header.panel.wrapper" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="logo" remove="true"/>
        <referenceContainer name="header.container">
            <container name="header-wrapper" label="Page Header" as="header-wrapper" htmlTag="div" htmlClass="header content">
                <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
                    <arguments>
                        <argument name="logo_img_width" xsi:type="number">189</argument>
                        <argument name="logo_img_height" xsi:type="number">64</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <referenceContainer name="header-wrapper">
            <block class="Cybage\Storelocator\Block\Index\Index" name="custom.header.menu" template="Magento_Theme::header/custom-menu.phtml" after="logo" cacheable="false"/>
        </referenceContainer>

        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="footer-seo-block">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-seo-block</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="footer-main-block" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-main-block</argument>
                </arguments>
            </block>
            <block class="Cybage\Storelocator\Block\Index\Index" name="scrollonTop" template="Magento_Theme::html/scroll-top.phtml" />
        </referenceContainer>
        <referenceContainer name="columns.top">
            <block name="login-popup" class="Cybage\PstpIntegration\Block\CaptchaForm" template="Magento_Theme::login-popup.phtml"  cacheable="false">
                <container name="customform.additional.info" label="Form Additional Info">
                    <block class="Magento\Captcha\Block\Captcha" name="captcha.custom" after="-" cacheable="false">
                        <action method="setFormId">
                            <argument name="formId" xsi:type="string">custom_login_form</argument>
                        </action>
                        <action method="setImgWidth">
                            <argument name="width" xsi:type="string">120</argument>
                        </action>
                        <action method="setImgHeight">
                            <argument name="width" xsi:type="string">38</argument>
                        </action>
                    </block>
                </container>
            </block>
        </referenceContainer>
    </body>
</page>
