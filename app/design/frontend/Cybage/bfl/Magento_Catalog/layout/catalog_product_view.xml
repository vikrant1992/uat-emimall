<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="js/pdp.js" />
    </head>
    <body>
        <referenceContainer name="content">
            <container name="custom-content" as="custom-content" label="Page CustomContent" htmlTag="section" htmlClass="j_pdpFullWidth" htmlId="overview1" >
            </container>
        </referenceContainer>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceContainer name="product.info.main" htmlId="p_rightdesignpdp">
                <block class="Magento\Catalog\Block\Product\View" name="product.name" template="Magento_Catalog::product/view/productData.phtml"  before="-" />
                <block class="Magento\Catalog\Block\Product\View" name="product.emi.option" template="Magento_Catalog::product/view/emiOptions.phtml" after="product.name" />
                <!-- Commented offer section as login is not yet came -->
                <!--<block class="Magento\Catalog\Block\Product\View" name="product.offers" template="Magento_Catalog::product/view/offers.phtml"  after="product.name" />-->
                <block class="Cybage\Productdetail\Block\Reviews" name="product.info.keyspec" template="Magento_Catalog::product/view/keyspecification.phtml" after="product.info">
                </block>
                <block class="Cybage\Productdetail\Block\Specification" name="product.info.overview" template="Magento_Catalog::product/view/description.phtml" after="product.info.keyspec"></block>
                <block class="Cybage\Productdetail\Block\Reviews" name="product.info.expertreviews" template="Magento_Catalog::product/view/expert_reviews.phtml" after="product.info.overview">
                    <block class="Cybage\Productdetail\Block\Reviews" name="product.info.userreviews" template="Magento_Catalog::product/view/user_reviews.phtml"/>
                </block>
                <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.faq" template="Magento_Catalog::product/view/faq.phtml" after="product.info.expertreviews"></block>
        </referenceContainer>
        <referenceBlock name="catalog.product.related" remove="true" />
        <referenceBlock name="main">
            <block class="Magento\Catalog\Block\Product\View" name="product.fullbreadcrumbs" template="Magento_Catalog::product/view/fullbreadcrumbs.phtml" before="-"/>
            <block class="Cybage\Productdetail\Block\Similar" name="product.similar" template="Magento_Catalog::product/view/similar.phtml"/>
        </referenceBlock>
        <move element="product.info.extrahint" destination="product.info.main"  before="-"/>
        <move element="product.info.mailto" destination="product.info.addto"  before="view.addto.compare" />
        <move element="breadcrumbs" destination="custom-content" before="-" />
        <move element="product.info.main" destination="custom-content"/>
        <move element="product.info.media" destination="custom-content"/>
        <move element="product.info.price" destination="product.info.main" after="product.name"/>
        <referenceBlock name="product.info.sku" remove="true"/>
        <referenceBlock name="product.info.addtocart" remove="true"/>
        <referenceBlock name="product.info.options.wrapper.bottom" remove="true" />
        <referenceBlock name="product.info.review" remove="true"/>
        <referenceBlock name="product.info.details" remove="true"/>
        <referenceBlock name="footer-seo-block" remove="true"/>
        <referenceContainer name="footer">
            <block class="Magento\Catalog\Block\Product\View" name="product.footer" template="Magento_Catalog::product/view/footer.phtml">
            </block>
            
        </referenceContainer>
    </body>
</page>
