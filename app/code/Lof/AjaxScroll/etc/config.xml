<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<lofajaxscroll>
            <general>
                <enabled>1</enabled>  
            </general>
            <instances>
                <enabled_grid>1</enabled_grid>
                <enabled_layer>1</enabled_layer>
                <enabled_search>1</enabled_search>
                <enabled_advanced>1</enabled_advanced>
                <enabled_brand>1</enabled_brand>
                <enable_parameter>0</enable_parameter>
                <delay>600</delay>
            </instances>
            <selectors>
                <content>.main</content>
                <pagination>#layer-product-list .pages</pagination>
                <toolbar>.toolbar</toolbar> 
                <next>.next</next>
                <grid_mode>.product-item</grid_mode>
                <list_mode>.products-list</list_mode> 
            </selectors>
            <design>
                <loading_image></loading_image>
                <loading_text><![CDATA[<em>Loading - please wait...</em>]]></loading_text>
                <done_text></done_text>
                <hide_toolbar>0</hide_toolbar> 
                <buffer>150</buffer>
                <load_more>1</load_more>
                <load_more_text>Load more</load_more_text>
                <local_mode>1</local_mode> 
            </design> 
        </lofajaxscroll>
    </default>
</config>