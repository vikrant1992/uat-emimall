<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">cybage_storelocator_dealer_form.dealer_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button class="Cybage\Storelocator\Block\Adminhtml\Dealer\Edit\BackButton" name="back"/>
            <button class="Cybage\Storelocator\Block\Adminhtml\Dealer\Edit\DeleteButton" name="delete"/>
            <button class="Cybage\Storelocator\Block\Adminhtml\Dealer\Edit\SaveButton" name="save"/>
            <button class="Cybage\Storelocator\Block\Adminhtml\Dealer\Edit\SaveAndContinueButton" name="save_and_continue"/>
        </buttons>
        <namespace>cybage_storelocator_dealer_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>cybage_storelocator_dealer_form.dealer_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="dealer_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Cybage\Storelocator\Model\Dealer\DataProvider" name="dealer_form_data_source">
            <settings>
                <requestFieldName>dealer_id</requestFieldName>
                <primaryFieldName>dealer_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field formElement="input" name="group_id" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Group Id</label>
                <dataScope>group_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="textarea" name="address" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Address</label>
                <dataScope>address</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="city_id" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <dataScope>city_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="phone" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Phone</label>
                <dataScope>phone</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="bajaj_dealerid" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Dealer Id</label>
                <dataScope>bajaj_dealerid</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="dealer_name" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Dealer Name</label>
                <dataScope>dealer_name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="area" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Area</label>
                <dataScope>area</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="pincode" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Pincode</label>
                <dataScope>pincode</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="latitude" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Latitude</label>
                <dataScope>latitude</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="longitude" sortOrder="100">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Longitude</label>
                <dataScope>longitude</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field name="is_active" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Dealer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Is Active</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Enabledisable"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="subcategories">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Cybage\Storelocator\Model\Dropdown\Subcategory</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Select Subcategory</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="dataScope" xsi:type="string">subcategories</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="chipsEnabled" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="listens" xsi:type="array">
                        <item name="newOption" xsi:type="string">toggleOptionSelected</item>
                    </item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="source" xsi:type="string">subcategories</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="dealer_logo">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">dealer_logo</item>
                    <item name="label" xsi:type="string" translate="true">Dealer Logo</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Cybage_Storelocator/image-preview</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="cybage_storelocator/dealer/upload/field/dealer_logo"/>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
