<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="cybage" translate="label" sortOrder="100">
            <label>Cybage</label>
        </tab>
        <section id="cybage" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>cybage</tab>
            <resource>Cybage_Attributemapping::attributemapping</resource>
            <group id="attributemapping" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Cron Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="crontime" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Import Cron Path</label>
                    <frontend_model>Cybage\Attributemapping\Block\Adminhtml\System\Config\Crontime</frontend_model>
                    <backend_model>Cybage\Attributemapping\Model\System\Config\Backend\Sourcing\Cronpath</backend_model>
                </field>
                <field id="importcrontime" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mapping Cron Path</label>
                    <frontend_model>Cybage\Attributemapping\Block\Adminhtml\System\Config\Crontime</frontend_model>
                    <backend_model>Cybage\Attributemapping\Model\System\Config\Backend\Sourcing\Cronpath</backend_model>
                </field>
            </group>
            <group id="sftp" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>SFTP Configuration</label>
                <field id="hostname" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Hostname</label>
                </field>
                <field id="username" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Username</label>
                </field>
                <field id="password" translate="label" type="password" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Password</label>
                </field>
                <field id="filepath" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>File Path</label>
                </field>
                <field id="filename" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>File Name</label>
                    <comment>File must be csv.</comment>
                </field>
            </group>
        </section>
    </system>
</config>