<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
   <type name="Magento\Framework\Console\CommandList">
       <arguments>
           <argument name="commands" xsi:type="array">
               <item name="expert-review" xsi:type="object">Cybage\ExpertReview\Console\ExpertReview</item>
           </argument>
       </arguments>
   </type>
    <type name="Cybage\ExpertReview\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Cybage\ExpertReview\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">customLogHandler</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Cybage\ExpertReview\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
