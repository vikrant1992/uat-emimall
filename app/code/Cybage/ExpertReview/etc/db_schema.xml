<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="cybage_expert_review" engine="innodb" resource="default" comment="Expert review table">
        <column name="entity_id" xsi:type="int" comment="Entity Id" identity="true" nullable="false" padding="10" unsigned="false" />
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="entity_id"/>
        </constraint>
        <column name="sku" xsi:type="varchar" length="255" nullable="false" comment="product SKU" />
        <column name="reviewer" xsi:type="smallint" nullable="false" comment="Reviewer, 1-91 Mobile" />
        <column name="rating" xsi:type="decimal" scale="4" precision="12" unsigned="false" nullable="true" default="0" comment="product rating" />
        <column name="title" xsi:type="varchar" length="255" nullable="true" comment="review title" />
        <column name="verdict" xsi:type="text" nullable="true" comment="review description" />
        <column name="pros" xsi:type="text" nullable="true" comment="products' pros" />
        <column name="cons" xsi:type="text" nullable="true" comment="products' cons" />
        <column name="spec_score" xsi:type="text" nullable="true" comment="spec_score" />
        <column name="videos" xsi:type="text" nullable="true" comment="videos" />
        <column name="reviewed_by" xsi:type="varchar" length="255" nullable="true" comment="reviewer name" />
        <column name="reviewed_date" xsi:type="timestamp" nullable="true" comment="review date" />
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
    </table>
</schema>